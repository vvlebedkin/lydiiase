{{ header }}
<section class="page_default">
    <div class="container">
        <div class="crumbs">
            {% for breadcrumb in breadcrumbs %}
                {% if loop.last %}
                    <div class="crumb">{{ breadcrumb.text }}</div>
                {% else %}
                    <a href="{{ breadcrumb.href }}" class="crumb">{{ breadcrumb.text }}</a>
                {% endif %}
            {% endfor %}
        </div>
        <h1 class="page_title">{{ heading_title }}</h1>
        <div class="page_content{% if 'оферта' in heading_title|lower %} offer_page{% endif %}">
            {{ description }}
        </div>
    </div>
</section>
{{ footer }}