{{ header }}
<section class="page_default">
    <div class="container">
        <div class="crumbs">
            {% for breadcrumb in breadcrumbs %}
                {% if loop.last %}
                    <div class="crumb">{{ breadcrumb.text }}</div>
                {% else %}
                    <a href="{{ breadcrumb.href }}" class="crumb">{{ breadcrumb.text }}</a>
                {% endif %}
            {% endfor %}
        </div>
        <h1 class="page_title">{{ heading_title }}</h1>
        <div class="page_content">
            <div class="contacts_items">
                <div class="contacts_item">
                    <div class="contacts_item-icon"><img src="catalog/view/theme/lydiiase/assets/img/contacts_item1.svg" alt=""></div>
                    <div class="contacts_item-subtitle">Электронная почта</div>
                    <a href="mailto:{{ email }}" class="contacts_item-link">{{ email }}</a>
                    {% if email2 %}
                    <a href="mailto:{{ email2 }}" class="contacts_item-link">{{ email2 }}</a>
                    {% endif %}
                </div>
                <div class="contacts_item">
                    <div class="contacts_item-icon"><img src="catalog/view/theme/lydiiase/assets/img/contacts_item2.svg" alt=""></div>
                    <div class="contacts_item-subtitle">Мы в социальных сетях</div>
                    <div class="contacts_messages">
                        {% if social_tg %}
                        <a href="{{ social_tg }}" class="contacts_message" target="_blank"><img src="catalog/view/theme/lydiiase/assets/img/contacts_message1.svg" alt="Telegram"></a>
                        {% endif %}
                        {% if social_inst %}
                        <a href="{{ social_inst }}" class="contacts_message" target="_blank"><img src="catalog/view/theme/lydiiase/assets/img/contacts_message2.svg" alt="Instagram"></a>
                        {% endif %}
                    </div>
                </div>
                <div class="contacts_item">
                    <div class="contacts_item-icon"><img src="catalog/view/theme/lydiiase/assets/img/contacts_item3.svg" alt=""></div>
                    <div class="contacts_item-subtitle">Телефон</div>
                    <a href="tel:{{ telephone|replace({' ': '', '(': '', ')': '', '-': ''}) }}" class="contacts_item-link">{{ telephone }}</a>
                </div>
            </div>
        </div>
    </div>
</section>
{{ footer }}
