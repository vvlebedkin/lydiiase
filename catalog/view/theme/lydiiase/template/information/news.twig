{{ header }}
<section class="page_default">
	<div class="container">
		<div class="crumbs">
			{% for breadcrumb in breadcrumbs %}
				{% if loop.last %}
					<div class="crumb">{{ breadcrumb.text }}</div>
				{% else %}
					<a href="{{ breadcrumb.href }}" class="crumb">{{ breadcrumb.text }}</a>
				{% endif %}
			{% endfor %}
		</div>
		<h1 class="page_title">{{ heading_title }}</h1>

		<div class="bestsellers_items">
			{{ content_top }}
		</div>
	</div>
</section>

{{ content_bottom }}

{{ footer }}
